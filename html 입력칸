  <script>
    const previewImg = document.getElementById('preview');
    const galleryInput = document.getElementById('photo-gallery');
    const cameraInput = document.getElementById('photo-camera');

    function handleFileChange(input) {
      const file = input.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          previewImg.src = e.target.result;
          previewImg.style.display = 'block';
        };
        reader.readAsDataURL(file);
      } else {
        previewImg.src = '';
        previewImg.style.display = 'none';
      }
    }

    galleryInput.addEventListener('change', function() {
      cameraInput.value = ''; // ì¹´ë©”ë¼ ì…ë ¥ ì´ˆê¸°í™”
      handleFileChange(this);
    });

    cameraInput.addEventListener('change', function() {
      galleryInput.value = ''; // ê°¤ëŸ¬ë¦¬ ì…ë ¥ ì´ˆê¸°í™”
      handleFileChange(this);
    });
  </script>

